	<!-- 默认的注解映射的支持 -->
	<mvc:annotation-driven>
		<mvc:return-value-handlers>
			<!-- 添加统一返回值的处理器 -->
			<bean class="com.tota.se.web.handler.CommonMethodReturnValueHandler" />
		</mvc:return-value-handlers>
	</mvc:annotation-driven>
	
	<!-- 添加统一异常处理器 -->
	<bean class="com.tota.se.web.handler.CommonExceptionHandler" />

